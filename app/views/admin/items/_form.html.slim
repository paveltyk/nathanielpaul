= simple_form_for @item, :url => path, :html => { :multipart => true, :class => 'form-horizontal' } do |f|
  - if @item.errors.any?
    .alert.alert-error
      = @item.errors.messages[:photos].join

  = f.simple_fields_for :photos do |p|
    - if p.object.try(:new_record?)
      = p.input :image, label: 'Add a photo'

  .form-actions
    = f.submit :Save, :class => 'btn btn-primary'
    - if defined?(@collection)
      | &nbsp;
      = link_to 'Cancel', admin_collection_path(@collection), class: 'btn'
